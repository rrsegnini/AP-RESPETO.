<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaAyuda"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/ayuda_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="53dp"
        android:layout_marginTop="16dp"
        android:text="Ayuda"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/ayuda_crdDenuncia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/ayuda_crdDenuncia"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/ayuda_crdFunciona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayuda_txtTitle">

        <TextView
            android:id="@+id/ayuda_txtDenuncia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="¿Cómo crear una denuncia?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ayuda_crdFunciona"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/ayuda_crdComentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayuda_crdDenuncia">

        <TextView
            android:id="@+id/ayuda_txtFunciona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="¿Cómo funciona?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ayuda_crdComentario"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/ayuda_crdAgresion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayuda_crdFunciona">

        <TextView
            android:id="@+id/ayuda_txtComentario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="¿Cómo escribir un comentario?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ayuda_crdAgresion"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayuda_crdComentario">

        <TextView
            android:id="@+id/ayuda_txtAgresion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="¿Qué hacer en caso de agresión?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaAyuda"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ayuda_txtTitle"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="53dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Ayuda"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/ayuda_crdDenuncia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/ayuda_crdDenuncia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="43dp"
                android:contentDescription="asdasd"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/ayuda_crdFunciona"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ayuda_txtTitle">

                <TextView
                    android:id="@+id/ayuda_txtDenuncia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="fgfgdfgdfg"
                    android:gravity="center"
                    android:text="¿Cómo crear una denuncia?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/ayuda_txtDenuncia2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/LoremIpsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="invisible" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ayuda_crdAgresion"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="76dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ayuda_crdComentario">

                <TextView
                    android:id="@+id/ayuda_txtAgresion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¿Qué hacer en caso de agresión?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/ayuda_txtAgresion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/LoremIpsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="invisible" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ayuda_crdFunciona"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="44dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/ayuda_crdComentario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ayuda_crdDenuncia">

                <TextView
                    android:id="@+id/ayuda_txtFunciona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¿Cómo funciona?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/ayuda_txtFunciona2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/LoremIpsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="invisible" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/ayuda_crdComentario"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="34dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toTopOf="@+id/ayuda_crdAgresion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ayuda_crdFunciona">

                <TextView
                    android:id="@+id/ayuda_txtComentario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="¿Cómo escribir un comentario?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/ayuda_txtComentario2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/LoremIpsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="invisible" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
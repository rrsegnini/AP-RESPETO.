<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/RSPT_green</item>
        <item name="android:colorAccent">@color/RSPT_red</item>
        <item name="android:textColorSecondary">@color/RSPT_red</item>
        <item name="android:textColorSecondaryInverse">@color/RSPT_red</item>
        <item name="android:textColorPrimary">@color/RSPT_blue</item>
    </style>
</resources>
